<Window x:Class="Saltyminer.Configs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Saltyminer"
        mc:Ignorable="d"
        Title="Saltyminer" Height="600" Width="1000" Background="#f4f4f4" WindowStyle="None" ResizeMode="NoResize" MouseLeftButtonDown="drag_window">
    <Grid>
        <Image x:Name="exit_img" HorizontalAlignment="Left" Height="30" Margin="760,10,0,0" VerticalAlignment="Top" Width="30" Source="Resources/light_exit.png" MouseDown="exit_img_Click"/>
        <Label x:Name="cpu_settings_label" Content="CPU Settings" HorizontalAlignment="Left" Margin="19,23,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="gpu_settings_label" Content="GPU Settings" HorizontalAlignment="Left" Margin="19,264,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox x:Name="cpu_addressinput" HorizontalAlignment="Left" Margin="18,92,0,0" Text="Enter address" TextWrapping="Wrap" VerticalAlignment="Top" Width="555" Height="23"/>
        <Label x:Name="cpu_addressinput_label" Content="Address" HorizontalAlignment="Left" Margin="19,61,0,0" VerticalAlignment="Top" FontWeight="Normal"/>
    </Grid>
</Window>
